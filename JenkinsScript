pipeline {
    agent any

    stages {
        stage('Clonar Repositorio') {
            steps {
                script {
                    echo 'Clonando el repositorio desde GitHub...'
                }
                git branch: 'main', 
                    url: 'https://github.com/GalicianNyx/TestProyecto.git'
            }
        }

        stage('Análisis de Código con SonarQube') {
            steps {
                script {
                    echo 'Ejecutando análisis de SonarQube...'
                }
                withSonarQubeEnv('Sonar') {
                    sh 'export PATH=$PATH:/opt/sonarscanner/sonar-scanner-6.2.1.4610-linux-x64/bin && ' +
                    'sonar-scanner -Dsonar.projectKey=TestProyecto ' +
                    '-Dsonar.sources=. ' +
                    '-Dsonar.host.url=http://192.168.1.101:9000 ' +
                    '-Dsonar.login=sqa_7fb62898f900b70204fe7fd8b5fba84c3263d321'
                }
            }
        }

        stage('Verificar Puerto 9090') {
            steps {
                script {
                    echo 'Verificando que el puerto 9090 esté libre...'
                    sh 'netstat -tuln | grep 9090 || true'
                }
            }
        }

        stage('Construir Docker Image') {
            steps {
                script {
                    echo 'Construyendo la imagen de Docker...'
                    sh 'docker build -t despliegue-aplicacion .'
                }
            }
        }

        stage('Ejecutar Docker Contenedor') {
            steps {
                script {
                    echo 'Ejecutando el contenedor Docker...'
                    sh 'docker run -d -p 9090:80 despliegue-aplicacion'
                }
            }
        }

        stage('Instalar zap-cli') {
            steps {
                script {
                    echo 'Instalando zap-cli...'
                    sh 'pip install zap-cli'
                }
            }
        }

        stage('Escaneo de Vulnerabilidades con OWASP ZAP') {
            steps {
                script {
                    echo 'Ejecutando escaneo con OWASP ZAP...'
                }
                sh """
                zap-cli quick-scan --self-contained http://localhost:9090
                """
            }
        }

        stage('Notificar Resultado') {
            steps {
                script {
                    echo 'Notificación: Pipeline finalizado.'
                }
            }
        }
    }
}
